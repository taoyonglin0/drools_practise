package rules.hello
import com.rules.attribute.pojo.Customer;
import com.rules.attribute.pojo.Order;
import com.rules.attribute.pojo.Person;
    rule "rule1"
        when
            $customer:Customer(age>20,gender=='male')
        then
            System.out.println("规则一发现年龄大于20的男性顾客");
            System.out.println(String.format("规则一输出顾客性别为:%s",$customer.getGender()));
    end

    rule "rule2"
            when
                $customer:Customer(age>20,$g:gender=='male')
            then
                System.out.println("规则二发现年龄大于20的男性顾客");
                System.out.println(String.format("规则二输出顾客性别为:%s",$g));
    end
    rule "rule3"
            when
                $customer:Customer(age>20,$g:gender=='male')
                $order:Order(customer==$customer,price>1000)
            then
                System.out.println("规则三发现20岁以上男性的订单，且订单价格大于1000");
    end
//    加 + 减 - 乘 * 除 / 取模 % 注意%的优先级较低，需要加括号
    rule "rule4"
            when
                $person:Person((age%20)==5)
            then
                System.out.println("规则四测试除法,成功");
    end

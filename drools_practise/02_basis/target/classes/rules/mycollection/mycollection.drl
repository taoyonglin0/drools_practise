package rules.mycollection;
import com.rules.attribute.pojo.School;
import java.util.Map;
import java.util.List;

rule "my_collection01"
    when
        $school:School();
    then
        System.out.println(String.format("【my_collection01】学校%s的第二个班级是%s",$school,$school.getClassNameList().get(1)));
end;
//
rule "my_collection02"
    when
        $school:School(classNameList[2] == "一班");
    then
        System.out.println(String.format("【my_collection02】第二个班级是一班的学校是%s",$school));
end;
//map测试
rule "my_collection03"
    when
        $map:Map(containsKey("测试学校一"));
    then
        System.out.println(String.format("【my_collection03】key包含测试学校一的Map%s",$map));
end;
//map测试
rule "my_collection04"
    when
        $map:Map();
    then
        System.out.println(String.format("【my_collection04】Map中key测试学校一对应的value是%s",$map.get("测试学校一")));
end;
//遍历List中的元素 匹配List中的元素，然后获取其中每个元素执行RHS操作
rule "my_collection05"
    when
        $li:List(size() > 0);
        $element:School() from $li;
    then
        System.out.println(String.format("【my_collection05】List中每个元素是%s",$element));
end
//遍历List中的元素 匹配List中的元素，然后获取其中每个元素执行RHS操作
rule "my_collection06"
    when
        $li:List(size() > 0);
        $element:Object() from $li;
    then
        System.out.println(String.format("【my_collection06】List中每个元素是%s",$element));
end
package rules.hello
import com.rules.hello.pojo.Person;
    rule "test001"
        when
            eval(true)
        then
            System.out.println("hello world");
    end

    rule "test002"
        when
            $p:Person();
        then
            System.out.println(String.format("输出引用对象：%s",$p));
    end

    rule "test003"
        when
            $p:Person(name=="张三",age=="30");
        then
            System.out.println(String.format("传入的参数中有一位叫张三且年龄在30岁的人"));
    end

    rule "test004"
        when
            $p:Person(name=="张三",age=="30");
        then
            $p.setAge("40");
            update($p)
            System.out.println(String.format("输出修改后的引用对象：%s",$p));
    end

    rule "test005"
        when
            $p:Person(name=="张三",age=="40");
        then
            $p.setAge("40");
            System.out.println(String.format("规则test005执行成功了"));
    end